{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "SPHERE.IO category schema",
  "type": "object",
  "properties": {
    "total": {
      "type": "integer"
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "externalId": {
            "type": "string"
          },
          "name": {
            "$ref": "/ltext"
          },
          "slug": {
            "$ref": "/ltext"
          },
          "description": {
            "$ref": "/ltext"
          },
          "orderHint": {
            "type": "string"
          },
          "parentId": {
            "type": "string"
          }
        },
        "required": ["name", "slug"]
      }
    }
  },
  "additionalProperties": false,
  "required": ["categories"]
}