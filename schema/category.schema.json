{
  "$schema": "http://json-schema.org/schema#",
  "title": "SPHERE.IO category schema",
  "type": "object",
  "properties": {
    "total": {
      "type": "integer"
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "externalId": {
            "type": "string"
          },
          "name": {
            "$ref": "#/definitions/localizedString"
          },
          "slug": {
            "$ref": "#/definitions/localizedString"
          },
          "description": {
            "$ref": "#/definitions/localizedString"
          },
          "orderHint": {
            "type": "string"
          }
        },
        "required": ["name", "slug"]
      }
    }
  },
  "required": ["categories"],
  "definitions": {
    "localizedString": {
      "type": "object",
      "patternProperties": {
        "^([a-z]){2}$": {
          "type": "string"
        }
      },
      "properties": {},
      "additionalProperties": false
    }
  }
}