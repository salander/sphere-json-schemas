{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "SPHERE.IO product schema",
  "url": "http://dev.sphere.io/http-api-projects-products.html",
  "type": "object",
  "properties": {
    "total": {
      "type": "integer"
    },
    "products": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "productType": {
            "$ref": "/reference"
          },
          "id": {
            "type": "string"
          },
          "name": {
            "$ref": "/ltext"
          },
          "slug": {
            "$ref": "/ltext"
          },
          "description": {
            "$ref": "/ltext"
          },
          "masterVariant": {
            "type": "object",
            "properties": {
              "id": {
                "type": "integer",
                "minimum": 1,
                "maximum": 1
              },
              "sku": {
                "type": "string"
              },
              "images": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "url": {
                      "type": "string"
                    }
                  },
                  "required": ["url"]
                }
              },
              "attributes": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "value": { }
                  },
                  "additionalProperties": false,
                  "required": ["name"]
                }
              }
            },
            "required": ["sku"]
          },
          "variants": {
            "$ref": "/variants"
          },
          "categories": {
            "type": "array",
            "items": {
              "$ref": "/reference"
            }
          },
          "taxCategory": {
            "$ref": "/reference"
          }
        },
        "required": ["name", "masterVariant"]
      }
    }
  },
  "additionalProperties": false,
  "required": ["products"]
}
