{
  "title": "SPHERE.IO product schema",
  "type": "object",
  "properties": {
    "total": {
      "type": "integer"
    },
    "products": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "productType": {
            "$ref": "/reference"
          },
          "id": {
            "type": "string"
          },
          "name": {
            "$ref": "/ltext"
          },
          "slug": {
            "$ref": "/ltext"
          },
          "description": {
            "$ref": "/ltext"
          },
          "variants": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer",
                  "min": 1
                },
                "sku": {
                  "type": "string"
                },
                "images": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                    }
                  }
                },
                "attributes": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                    }
                  }
                }
              },
              "required": ["sku"]
            }
          },
          "categories": {
            "type": "array",
            "items": {
              "$ref": "/reference"
            }
          },
          "taxCategory": {
            "$ref": "/reference"
          }
        },
        "required": ["name", "variants"]
      }
    }
  },
  "required": ["products"]
}